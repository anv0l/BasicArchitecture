<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fitsSystemWindows="true">

    <TextView
        android:id="@+id/txt_name_description"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingTop="10dp"
        android:text="Name"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/txt_name"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Name"
        android:textSize="24sp"
        app:layout_constraintTop_toBottomOf="@id/txt_name_description" />

    <TextView
        android:id="@+id/txt_surname_description"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingTop="10dp"
        android:text="Surname"
        app:layout_constraintTop_toBottomOf="@id/txt_name" />

    <TextView
        android:id="@+id/txt_surname"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Surname"
        android:textSize="24sp"
        app:layout_constraintTop_toBottomOf="@id/txt_surname_description" />

    <TextView
        android:id="@+id/txt_birthday_description"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingTop="10dp"
        android:text="Birthday"
        app:layout_constraintTop_toBottomOf="@id/txt_surname" />

    <TextView
        android:id="@+id/txt_birthday"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="01.01.1900"
        android:textSize="24sp"
        app:layout_constraintTop_toBottomOf="@id/txt_birthday_description" />

    <TextView
        android:id="@+id/txt_address_description"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingTop="10dp"
        android:text="Address"
        app:layout_constraintTop_toBottomOf="@id/txt_birthday" />

    <TextView
        android:id="@+id/txt_address"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Surname"
        android:textSize="24sp"
        app:layout_constraintTop_toBottomOf="@id/txt_address_description" />

    <TextView
        android:id="@+id/txt_hobbies_description"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingTop="10dp"
        android:text="Interests"
        app:layout_constraintTop_toBottomOf="@id/txt_address" />

    <com.google.android.material.chip.ChipGroup
        android:id="@+id/chip_hobbies_tags_group"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        app:flow_verticalAlign="top"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintTop_toBottomOf="@id/txt_hobbies_description"
        app:layout_constraintVertical_bias="0.0"
        tools:layout_editor_absoluteX="0dp" />

</androidx.constraintlayout.widget.ConstraintLayout>